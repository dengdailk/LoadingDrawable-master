<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/fish_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff071c28"
        app:layout_constraintBottom_toTopOf="@+id/ghosts_eye_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loading_renderer="FishLoadingRenderer" />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/ghosts_eye_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffcdcdcd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fish_view"
        app:loading_renderer="GhostsEyeLoadingRenderer" />

</android.support.constraint.ConstraintLayout>