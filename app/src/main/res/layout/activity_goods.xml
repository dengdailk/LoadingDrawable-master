<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/balloon_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffd4d9da"
        app:layout_constraintBottom_toTopOf="@+id/water_bottle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loading_renderer="BalloonLoadingRenderer" />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/water_bottle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff15181d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balloon_view"
        app:loading_renderer="WaterBottleLoadingRenderer" />

</android.support.constraint.ConstraintLayout>